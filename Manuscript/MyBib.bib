title = {{Fine mapping in 94 inbred mouse strains using a high-density haplotype resource.}},
url = {http://www.genetics.org/cgi/doi/10.1534/genetics.110.115014 http://www.ncbi.nlm.nih.gov/pubmed/20439770 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2907194},
