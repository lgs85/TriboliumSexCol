title = {{Telomere length and dynamics predict mortality in a wild longitudinal study}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/mec.12110/abstract{\%}5Cnhttp://onlinelibrary.wiley.com/doi/10.1111/mec.12110/abstract;jsessionid=3F87419F95190900B2465F8CE05D8FE5.f03t04{\%}5Cnhttp://onlinelibrary.wiley.com/store/10.1111/mec.12110/asset/mec12110.pdf?v=1{\&}t=hn2w1qmc{\&}s=8775f7aec9576713c034339049a752db69244a98},
