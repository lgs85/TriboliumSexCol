month = {jan},
number = {1},
pages = {36--45},
pmid = {25628862},
title = {{Population history, gene flow, and bottlenecks in island populations of a secondary seed disperser, the southern grey shrike (Lanius meridionalis koenigi).}},
url = {http://doi.wiley.com/10.1002/ece3.1334 http://www.ncbi.nlm.nih.gov/pubmed/25628862 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4298432},
volume = {5},
